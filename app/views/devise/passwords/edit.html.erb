<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h4 class="text-center">Change your password</h4>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
      
      <%= render partial: 'shared/error_messages', locals: { resource: resource } %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <div class="label-control col-md-3">
          <%= f.label :password %>
        </div>
        <div class="col-md-9">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <div class="label-control col-md-3">
          <%= f.label :password_confirmation %>
        </div>
        <div class="col-md-9">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-9 col-md-offset-3">
          <%= f.submit "Change my password", class: "btn btn-lg btn-success" %>
        </div>
      </div>

      <hr />
    <% end %>
  </div>
</div>


<div class="row">
  <div class="col-xs-offset-3 col-xs-9">
    <%= render "devise/shared/links" %>
    <%= link_to "Cancel", root_path, class: "btn btn-default" %>    
  </div>
</div>

