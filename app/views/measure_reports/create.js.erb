(function($) {

  var $report = $('<%= j( render partial: "measure_reports/measure_report", locals: { measure_report: @measure_report }) %>');

  var $target = $('#measure-attributes');

  $report.insertAfter( $target )
         .hide()
         .slideDown(700);

  // $('#new_measure_report').trigger('reset');
  $("input[type=text], input[type=number], textarea").val("");

  $('<%= j(render partial: "shared/flash", locals: { message: "Your report was successfully posted!", flash_type: "success" }) %>')
    .insertAfter($target)
    .hide()
    .fadeIn(500);

})(jQuery);

