<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @objective, html: { class:"form-horizontal" } do |objective_fields| %>
      <fieldset>
        <legend><%= action_name.capitalize %> Objective Form</legend>
        
        <%= render partial: 'shared/error_messages', locals: { resource: @objective } %>

        <div class="form-group">
          <%= objective_fields.label :key_focus_area_id, "Key Focus Area*", class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= objective_fields.collection_select  :key_focus_area_id,
                                                    KeyFocusArea.order(:name),
                                                    :id,
                                                    :name,
                                                    { prompt: "Please select a Key Focus Area for this objective"},
                                                    class: "form-control",
                                                    required: true %>
          </div>
        </div>
        
        <div class="form-group">
          <%= objective_fields.label :name, "Name*", class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= objective_fields.text_field :name, class: "form-control", required: true %>
          </div>
        </div>

        <div class="form-group">
          <%= objective_fields.label :description, "Description*", class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= objective_fields.text_area :description, class: "form-control", required: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-9 col-md-offset-3">
            <%= link_to 'Cancel', objectives_path, class: "btn btn-default" %>
            <%= objective_fields.submit class: "btn btn-primary" %>
          </div>
        </div>
        
      </fieldset>
    <% end %>
  </div>
</div>