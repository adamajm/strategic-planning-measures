<div class="card-actions layout-row layout-align-space-between-center">
  
  <span class="flex"></span>

  <%= link_to polymorphic_path(resource, format: :pdf), class: "icon-action", 'aria-label': "Download PDF", title: 'Download PDF', data: {toggle: 'tooltip', placement: 'top'} do %>
    <i class="fa fa-lg fa-file-pdf-o text-warning"></i>
  <% end if controller_name == 'initiative_planning_guides' %>

  <%= link_to measure_reports_path(query: { "#{resource.class.model_name.collection}.id": resource.id }), class: "icon-action", 'aria-label': "Reports", title: "Associated Reports", data: {toggle: 'tooltip', placement: 'top'} do %>
    <i class="fa fa-lg fa-file-text-o text-info"></i>
  <% end unless controller_name == "measure_reports" || controller_name == "initiative_planning_guides" %>
  
  <%= link_to polymorphic_path(resource.class), class: "icon-action", 'aria-label': "Back", title: 'Back', data: {toggle: 'tooltip', placement: 'top'} do  %>
    <i class="fa fa-lg fa-arrow-left text-primary"></i>
  <% end if action_name == 'show' %>
  
  <%= link_to resource, class: "icon-action", 'aria-label': "Show details", title: 'Show Details', data: {toggle: 'tooltip', placement: 'top'} do %>
    <i class="fa fa-lg fa-eye text-primary"></i>
  <% end unless action_name == 'show' %>

  <% admin_content(exception_user: resource.try(:author), exception_controller: "measure_reports") do %>
    <%= link_to edit_polymorphic_path(resource), class: "icon-action", 'aria-label': "Edit", title: 'Edit', data: {toggle: 'tooltip', placement: 'top'} do  %>
      <i class="fa fa-lg fa-pencil text-primary"></i>
    <% end -%>
    <%= link_to resource, method: :delete, remote: true, class: "icon-action", title: 'Delete', data: {toggle: 'tooltip', placement: 'top', confirm: "Are you sure you want to delete this #{resource.class.model_name.human}?"}, "aria-label": "Delete" do %>
      <i class="fa fa-lg fa-trash text-danger"></i>
    <% end -%>
  <% end %>

</div>